/* pages/demo01/demo01.wxss */
/* 顶部 */
.top{
  width: 100%;
  height: 60rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 34rpx;
 }
 .top-text{
  float: left;
  text-align: center;
  width: 250rpx;
  border: 3rpx solid black;
  border-radius: 20rpx;
  margin-top: 20rpx;

 }
 /* 下拉框 */
 .top-selected{
  float: left;
  text-align: left;
  width: 270rpx;
  border: 3rpx solid black;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
 }
 image{
     margin-right: 200rpx;
     margin-top: 8rpx;
 }
 /* 下拉内容 */
 .select_box {
   background-color: #fff;
   padding: 0 20rpx;
   width: 200rpx;
   float: right;
   position: relative;
   right: 0;
   z-index: 1;
   overflow: hidden;
   text-align: left;
   animation: myfirst 0.5s;
   font-size: 30rpx;
   margin-right: 200rpx;
 }
 .select_one {
   padding-left: 20rpx;
   width: 100%;
   height: 60rpx;
   position: relative;
   line-height: 60rpx;
   border-bottom: 1px solid #ccc;
 }
 
 /* 下拉图标 */
 .top-selected image{
  height:50rpx;
  width:50rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
 }
 .btnquery{
  float: left;
  padding: 0;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
}
.title {
  margin-top: 40rpx;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 70rpx;
  align-items: center;
 }
 .subtitle {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 70rpx;
  align-items: center;
 }
.content{
  float: left;
  display: block;
}
.content{
  display: flex;
  flex-direction: row;
}
.subcontent{
  flex-direction: column;
  margin-left: 160rpx;
  width: 200rpx;
  height: 100%;
}